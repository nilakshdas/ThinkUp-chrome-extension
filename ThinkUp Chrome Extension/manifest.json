{
  "manifest_version": 2,

  "name": "ThinkUp Insight Notifications",
  "description": "Get desktop notifications for new insights on your ThinkUp app.",
  "version": "1.0",

  "permissions": [
    "*://*/*",
    "notifications",
    "storage"
  ],

  "background": { 
    "scripts": ["js/jquery.min.js", "js/background.js"]
  },

  "browser_action": {
    "default_icon": "img/favicon.png",
    "default_popup": "popup.html"
  },

  "web_accessible_resources": [
    "img/favicon.png"
  ]
}